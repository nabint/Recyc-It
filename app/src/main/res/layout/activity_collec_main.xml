<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Collec_mainActivity"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="House No."
        android:id="@+id/house_id"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Month"
        android:id="@+id/months"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No. Of People"
        android:inputType="number"
        android:id="@+id/people_num"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pollution Type"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:typeface="serif"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Degradeable"
                android:textSize="20dp"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-Degradeable"
            android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Waste Weight"
            android:inputType="number"
                android:id="@+id/degradeable_weight"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Waste Weight"
                android:id="@+id/nondegradeable_weight"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Ratio"
                android:id="@+id/degradeable_ratio"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Ratio"
                android:id="@+id/nondegradeable_ratio"/>
        </LinearLayout>
    </LinearLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Calculate Ratio"
    android:id="@+id/calc_ratio"
    android:layout_gravity="center"
    android:background="@drawable/roundedbutton"
    android:padding="20dp"
    android:layout_marginTop="20dp"
    />
<Button
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Send"
    android:layout_gravity="center_horizontal"
    android:id="@+id/send_project"
    android:background="@drawable/roundedbutton"
    android:padding="20dp"/>

</LinearLayout>